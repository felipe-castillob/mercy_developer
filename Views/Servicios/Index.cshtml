@model IEnumerable<mercy_developer.Models.Servicio>

@{
    ViewData["Title"] = "Lista de Servicios";
}

<h1>Lista de Servicios</h1>

<p>
    <a asp-action="Create">Crear Servicio</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreServicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioServicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sku)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreServicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioServicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sku)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.IdUsuario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdServicio">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdServicio">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdServicio">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
